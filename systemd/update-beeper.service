[Unit]
Description=Update Beeper Desktop to latest version
Documentation=https://github.com/robertogogoni/update-beeper
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/update-beeper --notify
# Run as the user who owns the display for notifications
# Edit this to match your username
User=rob
Environment=DISPLAY=:0
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus

[Install]
WantedBy=multi-user.target
