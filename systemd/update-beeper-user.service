[Unit]
Description=Update Beeper Desktop to latest version
Documentation=https://github.com/robertogogoni/update-beeper
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
# Assumes update-beeper is in PATH (e.g., ~/.local/bin)
ExecStart=%h/.local/bin/update-beeper --notify

[Install]
WantedBy=default.target
